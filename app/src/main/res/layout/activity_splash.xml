<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.view.SplashActivity"
    android:background="@drawable/degradado_registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="130dp"
        android:contentDescription="@string/logo_instituto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ies_trassierras" />

    <ProgressBar
        android:id="@+id/pb_cargando"
        style="?android:attr/progressBarStyle"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:indeterminateDrawable="@drawable/estilo_progressbar_splash"/>
</androidx.constraintlayout.widget.ConstraintLayout>